<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="consolelog" class="ch.qos.logback.core.ConsoleAppender">
		<layout>
			<pattern>%-20(%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]) %-5level
				%logger{80} - %msg%n</pattern>
		</layout>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="consolelog" />
	</root>
</configuration>